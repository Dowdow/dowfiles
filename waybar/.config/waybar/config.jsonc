{
    "layer": "top",
    "spacing": 4,
    "modules-left": [
        "custom/launcher",
        "tray"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "temperature",
        "network",
        "battery",
        "wireplumber",
        "clock"
    ],
    "custom/launcher": {
        "format": "🦆 oui",
        "tooltip": false,
        "on-click": "if pgrep wofi > /dev/null; then killall wofi; else wofi --show drun; fi"
    },
    "tray": {
        "spacing": 10,
        "icon-size": 16
    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "persistent-workspaces": {
            "*": 5
        }
    },
    "cpu": {
        "tooltip": false,
        "format": "  {usage}%"
    },
    "memory": {
        "tooltip": false,
        "format": " {}%"
    },
    "temperature": {
        "tooltip": false,
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}°C",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "network": {
        "tooltip": false,
        "format-wifi": "  {essid}",
        "format-ethernet": " {ifname}",
        "format-disconnected": " d/c",
        "on-click": "alacritty -e nmtui"
    },
    "battery": {
        "tooltip": false,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon}  {capacity}%",
        "format-time": "{H} h {m} min",
        "format-charging": " {capacity}%",
        "format-full": " {capacity}%",
        "format-alt": "{icon}  {time}",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "wireplumber": {
        "tooltip": false,
        "format": "{icon} {volume}%",
        "format-muted": " {volume}%",
        "max-volume": 100,
        "format-icons": [
            "",
            "",
            " "
        ]
    },
    "clock": {
        "timezone": "Europe/Paris",
        "format": "  {:%a %d/%m/%Y    %H:%M}"
    }
}